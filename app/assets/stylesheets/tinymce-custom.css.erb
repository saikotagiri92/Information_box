#article-content{
	margin-left: .5% ;
	margin-right: 1% ;

}

/* heading styling */
#article-content h1{
	font-size: 24px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
	margin-left: -5px !important;
}

#article-content h2{
	font-size: 20px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

#article-content h3{
	font-size: 18px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

#article-content h4{
	font-size: 14px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

#article-content h5{
	font-size: 12px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

#article-content h6{
	font-size: 12px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}
#article-content strong{
	font-size: 20px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;	
}

li#inline-task-unchecked{
    list-style: none outside none !important;
    padding-left: 18px !important;
    
    background-repeat: no-repeat !important;
    background-size: 16px 16px !important;
    background-image:url('<%= asset_path 'checkbox-unchecked.png' %>') !important;
}

li#inline-task-checked{
    list-style: none outside none !important;
    padding-left: 18px !important;
    color: rgb(112, 112, 112) !important;
    background-repeat: no-repeat !important;
    background-size: 16px 16px !important;
    background-image:url('<%= asset_path 'checkbox-checked.png' %>') !important;
}

li#inline-task-checked a{
    color: rgb(112, 112, 112) !important;
    text-decoration: underline !important; 
    
}
/* List Styling */
#article-content ul {
  list-style: disc;
  margin-left: 1% !important;
}

#article-content ol {
 	margin-left: 1% !important;
 	list-style: decimal; 
}

#article-content > ul >  li {
  
  margin-left: 1.5% !important;
  font-size: 14px !important;
}
#article-content > ol >  li {
  
  margin-left: 1.5% !important;
  font-size: 14px !important;
}
#article-content ul li li{
	list-style: square;
	margin-left: 35px !important;
}

#article-content ul li li li{
	list-style: circle;
}


#article-content ol li li{
	list-style: lower-alpha;
	margin-left: 35px !important;
}

#article-content ol li li li{
	list-style: lower-roman;

}



/* paragraph styling */
#article-content p {
  font-size: 14px !important;
  margin-bottom: 20px !important;
}

/* Links styling */
#article-content a{
	font-size: 14px !important;
}

#article-content h1 > a{
	font-size: 24px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
	margin-left: -5px !important;
}

#article-content h2 > a {
	font-size: 20px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

#article-content h3 > a {
	font-size: 18px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

#article-content h4 > a {
	font-size: 14px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

#article-content h5 > a {
	font-size: 12px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

#article-content h6 > a {
	font-size: 12px !important;
	font-weight: bold !important;
	margin-bottom: 20px !important;
}

/* blockqoute styling */

#article-content blockquote{
	font-size: 14px !important;
}

/* Subscript & Superscript styling */
#article-content sub, sup{
	font-size: 14px !important;
}

/* bold, italcs & underline styling */
#article-content strong{
	font-weight: bold;
}
#article-content em{
	font-style: italic;
}
/* Table Styling */
#article-content table{
	overflow-x: auto;
}
#article-content table tr:first-child td{
	background-color: #efefef !important;
	font-weight: bold !important;
}
#article-content table{
	margin: 10px !important;
	border: 1px #dddddd solid;
	text-align: center !important;

}
#article-content table > tr > th{
	border: 1px #dddddd solid;
	text-align: center !important;

}

#article-content table > tr > td{
	border: 1px #dddddd solid;
	text-align: center !important;

}
#article-content td {
	min-width: 20px !important;
	border: 1px #dddddd solid;
	text-align: center !important;	
}


